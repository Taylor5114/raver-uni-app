
.box{
	width: 750rpx;
	height: 500rpx;
	/* border: 1rpx solid #000000; */
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	overflow: hidden;
}
._box{
	width: 250rpx;
	height: 250rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	position: relative;
}
.addimg{
	background: url(data:image/png;base64,) center no-repeat;
	border: 3rpx solid #8a8a8a;
}
._img{
	width: 230rpx;
	height: 230rpx;
	border-radius: 10rpx;
}
.tts{
	width: 16px;
	height: 16px;
	position: absolute;
	top: 15rpx;
	right: 15rpx;
	z-index: 1;
}

